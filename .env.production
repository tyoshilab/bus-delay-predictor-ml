# Production Environment Configuration
# Copy this file to .env and update with your production values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE
POSTGRES_DB=gtfs_production
DB_PORT=5432

# API Configuration
API_PORT=8000
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Timezone
TZ=America/Vancouver

# TransLink API (required for batch jobs)
TRANSLINK_API_KEY=YOUR_TRANSLINK_API_KEY_HERE

# Batch Job Configuration
PREDICTION_MODEL_PATH=files/model/best_delay_model.h5
GTFS_RT_CLEANUP_DAYS=7
WEATHER_SCRAPER_ROW_LIMIT=40
WEATHER_FILE_CLEANUP_DAYS=7

# Optional: Run initial batch job on container startup
# INITIAL_JOB=load-realtime
