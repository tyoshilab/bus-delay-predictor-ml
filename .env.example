# GTFS Bus Delay Prediction - Environment Variables Template
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to git

# ======================================
# Database Configuration
# ======================================

# PostgreSQL connection settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# Full database URL (used by application)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres

# Database port (for docker-compose)
DB_PORT=5432

# SSL requirement (set to 1 for production with SSL)
DATABASE_SSL_REQUIRE=0

# Database dump restore from GitHub resources
# These settings control which database dump is downloaded and restored during docker build
GITHUB_REPO_URL=https://github.com/taitalabs/vancoucer-bus-science/releases/download
DUMP_VERSION=v1.0.0
DUMP_FILENAME=gtfs_db.dump

# ======================================
# Application Configuration
# ======================================

# Environment (development, production, testing)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Timezone
TZ=America/Vancouver

# ======================================
# API Configuration
# ======================================

# API port (for docker-compose)
API_PORT=8000

# ======================================
# TransLink API
# ======================================

# TransLink Open API Key (required for real-time GTFS data)
# Get your API key from: https://www.translink.ca/about-us/doing-business-with-translink/app-developer-resources
TRANSLINK_API_KEY=your_translink_api_key_here

# ======================================
# Batch Job Configuration
# ======================================

# Path to the trained prediction model
PREDICTION_MODEL_PATH=files/model/best_delay_model.h5

# GTFS realtime data retention (days)
GTFS_RT_CLEANUP_DAYS=7

# Weather scraper configuration
WEATHER_SCRAPER_ROW_LIMIT=40
WEATHER_FILE_CLEANUP_DAYS=7

# Optional: Run an initial job when batch container starts
# Options: load-static, load-realtime, scrape-weather, predict
# INITIAL_JOB=load-realtime

# ======================================
# Directory Configuration (optional)
# ======================================

# Data directory (for local development)
# DATA_DIR=/workspace/GTFS/data

# Temporary directory
# TEMP_DIR=/tmp